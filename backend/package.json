{
  "name": "vista-alegre-api",
  "version": "1.0.0",
  "description": "Backend API para o Portal Vista Alegre do Abunã",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "setup:python": "python3 -m venv venv && . venv/bin/activate && pip install -r src/services/docling/requirements.txt",
    "setup:python:win": "python -m venv venv && venv\\Scripts\\activate && pip install -r src/services/docling/requirements.txt",
    "docling:check": "python3 -c \"import docling; print('Docling OK')\"",
    "postinstall": "echo 'Para usar Docling (extração avançada de PDF), execute: npm run setup:python'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
